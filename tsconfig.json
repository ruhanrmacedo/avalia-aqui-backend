{
   "compilerOptions": {
     "target": "es5",
     "module": "commonjs",
     "lib": [
       "es6"
     ], 
     "allowJs": true,
     "outDir": "build",
     "strict": true,
     "noImplicitAny": true,
     "strictPropertyInitialization": false,
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "experimentalDecorators": true, 
     "emitDecoratorMetadata": true, 
     "skipLibCheck": true, 
     "forceConsistentCasingInFileNames": true
   },
   "include": [
    "src"
  ],

 }